{
    "version": "0.2.0",
    "configurations": [
      {
        "name": "Flask",
        "type": "python",
        "request": "launch",
        "program": "${workspaceFolder}/app.py",
        "console": "integratedTerminal",
        "env": {
          "FLASK_APP": "${workspaceFolder}/app.py",
          "FLASK_ENV": "development"
        },
        "args": [
          "run"
        ]
      }
    ]
  }
  